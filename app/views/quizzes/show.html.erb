<h1><%= @quiz.title  %></h1>
<%= link_to 'Edit this quiz', edit_quiz_path(@quiz)%><br>
<% @quiz.rounds.each do |round| %>
  <p>
    <%= round.subject %>
    <% round.questions.each do |question| %>
    <li>
      <%= question.question %>: <%= question.answer.answer %> (<%= question.answer.score %>)
    </li>
    <% end %>
  </p>
<% end %>